<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="4dp"
    android:layout_marginStart="20dp"
    android:layout_marginEnd="20dp"
    android:layout_marginBottom="2dp"
    app:cardCornerRadius="15dp"
    app:cardElevation="6dp"
    android:backgroundTint="@color/white_100"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/iv_upper"
            tools:src="@tools:sample/avatars"
            app:shapeAppearanceOverlay="@style/ShapeAppearance.Material3.Corner.Medium"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_margin="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <TextView
            android:id="@+id/tv_saved_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginStart="16dp"
            android:text="@string/item_saved_name"
            android:textStyle="bold"
            android:textSize="24sp"
            android:textColor="@color/black"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/iv_upper"/>

        <TextView
            android:id="@+id/tv_palates_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/palate"
            android:textStyle="normal"
            android:textSize="14sp"
            android:textColor="@color/black"
            app:layout_constraintStart_toStartOf="@id/tv_saved_name"
            app:layout_constraintTop_toBottomOf="@id/tv_saved_name"/>

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/v_color_1"
            app:shapeAppearanceOverlay="@style/ShapeAppearance.Material3.Corner.Full"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:layout_marginTop="6dp"
            android:background="@color/black"
            app:layout_constraintStart_toStartOf="@id/tv_palates_info"
            app:layout_constraintTop_toBottomOf="@id/tv_palates_info"/>

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/v_color_2"
            app:shapeAppearanceOverlay="@style/ShapeAppearance.Material3.Corner.Full"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:layout_marginTop="6dp"
            android:layout_marginStart="8dp"
            android:background="@color/black"
            app:layout_constraintStart_toEndOf="@id/v_color_1"
            app:layout_constraintTop_toBottomOf="@id/tv_palates_info"/>

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/v_color_3"
            app:shapeAppearanceOverlay="@style/ShapeAppearance.Material3.Corner.Full"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:layout_marginTop="6dp"
            android:layout_marginStart="8dp"
            android:background="@color/black"
            app:layout_constraintStart_toEndOf="@id/v_color_2"
            app:layout_constraintTop_toBottomOf="@id/tv_palates_info"/>

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/v_color_4"
            app:shapeAppearanceOverlay="@style/ShapeAppearance.Material3.Corner.Full"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:layout_marginTop="6dp"
            android:layout_marginStart="8dp"
            android:background="@color/black"
            app:layout_constraintStart_toEndOf="@id/v_color_3"
            app:layout_constraintTop_toBottomOf="@id/tv_palates_info"/>

        <ImageView
            android:id="@+id/i_favorite"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginEnd="18dp"
            android:src="@drawable/solar_heart_bold"
            android:scaleType="fitCenter"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>