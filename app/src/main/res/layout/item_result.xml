<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cv_item_result"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="160dp"
        android:layout_gravity="center|top"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        app:cardCornerRadius="15dp"
        android:backgroundTint="@color/white_100" >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <ImageView
                android:id="@+id/v_item_1"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:background="@color/red_gray_100"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

            <ImageView
                android:id="@+id/v_item_2"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:background="@color/red_heart"
                app:layout_constraintStart_toEndOf="@id/v_item_1"
                app:layout_constraintTop_toTopOf="parent"/>

            <ImageView
                android:id="@+id/v_item_3"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:background="@color/red_gray_100"
                app:layout_constraintStart_toEndOf="@id/v_item_2"
                app:layout_constraintTop_toTopOf="parent"/>

            <ImageView
                android:id="@+id/v_item_4"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:background="@color/red_heart"
                app:layout_constraintStart_toEndOf="@id/v_item_3"
                app:layout_constraintTop_toTopOf="parent"/>

            <ImageView
                android:id="@+id/i_favorite"
                android:src="@drawable/solar_heart_bold"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginEnd="16dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/v_item_4" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>
</FrameLayout>